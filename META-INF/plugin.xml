<idea-plugin version="2">
    <name>Flex Modules</name>
    <description>Allow to manage which Flex modules are built by IntelliJ IDEA</description>
    <version>1.1</version>
    <vendor>platonov.me</vendor>
    <idea-version since-build="8000"/>

    <depends>com.intellij.flex</depends>

    <application-components>
        <!-- Add your application components here -->
    </application-components>

    <project-components>
        <!-- Add your project components here -->
    </project-components>

    <actions>
        <!-- Add your actions here -->
    </actions>

    <extensions defaultExtensionNs="com.intellij">
        <toolWindow id="Flex Modules" icon="/com/intellij/lang/javascript/flex/flex.png" anchor="right"
                    factoryClass="me.platonov.buildFlex.FlexModulesToolWindow"/>
    </extensions>
</idea-plugin>